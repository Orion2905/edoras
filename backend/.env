# Edoras Flask Backend - Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
SECRET_KEY=your-super-secret-key-here
DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///edoras_dev.db

# For Azure SQL Server (production)
# DATABASE_URL=mssql+pyodbc://username:password@server.database.windows.net/database?driver=ODBC+Driver+17+for+SQL+Server

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Azure Storage (per file uploads)
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=uploads

# Azure Key Vault (production)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Logging
LOG_LEVEL=DEBUG

# Application Settings
PORT=5000
